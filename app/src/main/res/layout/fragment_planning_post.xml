<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_16sdp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="What type of trip are you planning?"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subtitle Text -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select your type of trip and let everyone know what youâ€™re planning to travel."
                android:textColor="@color/grey"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <!-- RecyclerView for Trips -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvtrip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:layout_constraintBottom_toTopOf="@id/btnContinue"
                tools:itemCount="4"
                tools:listitem="@layout/item_trip_planing" />

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="Continue"
                android:textAllCaps="false"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/poppins_medium"
                android:enabled="false"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/button_text_color"
                android:backgroundTint="@color/button_background_tint"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
