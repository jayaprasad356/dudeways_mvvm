<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Trip.Fragment.threeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Where are you going"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <!-- Progress Text -->
                <TextView
                    android:id="@+id/tvProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="2/5"
                    android:textColor="@color/text_grey_light"
                    android:textSize="@dimen/_12sdp" />

                <!-- Horizontal ProgressBar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:indeterminateOnly="false"
                    android:max="5"
                    android:progress="2"
                    android:progressDrawable="@drawable/progress_gradient"
                    android:progressTintMode="src_in" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="[Kodaikanal,Ooty,Manali,Munnar, Bangalore etc..]"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/edit_text1"
                android:fontFamily="@font/poppins_medium"
                android:hint="Location"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />


        </LinearLayout>

    </FrameLayout>
</layout>
