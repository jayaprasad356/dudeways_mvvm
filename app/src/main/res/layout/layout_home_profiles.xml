<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/shafeeka"
                        android:textColor="?attr/myTextColor"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tvKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text=""
                        android:textColor="?attr/textgrey"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/ivVerify"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:background="@drawable/verify_ic"
                    android:backgroundTint="@color/primary"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text=""
                    android:textColor="?attr/textgrey"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="\u00B7"
                    android:textColor="?attr/textgrey"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>



                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_2sdp">


                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/location_ic"
                    android:backgroundTint="?attr/iconColor" />


                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Munnar Kerala"
                    android:textColor="?attr/myTextColor"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_2sdp">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ivShare"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Trip to Kerala, looking for travel partner"
                    android:textColor="?attr/myTextColor"
                    android:textSize="@dimen/_12sdp" />


                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/share_ic"
                    android:backgroundTint="?attr/iconColor"
                    android:visibility="gone" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_2sdp">


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:background="@drawable/date_ic"
                    android:backgroundTint="?attr/iconColor" />


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text=""
                    android:textColor="?attr/myTextColor"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/more"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>


            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivShare"
                android:fontFamily="@font/poppins_regular"
                android:paddingHorizontal="@dimen/_4sdp"
                android:text="Trip to Kerala, looking for travel partner"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rlAddFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_coner"
                    android:padding="@dimen/_10sdp">


                    <ImageView
                        android:id="@+id/ivaddFriend"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/add_account" />

                    <TextView
                        android:id="@+id/tvAddFriend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Add to Friend"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlChat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary"
                    android:padding="@dimen/_10sdp">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/chat_ic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Start Chat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
