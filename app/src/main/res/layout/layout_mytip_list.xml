<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Shafeeka"
                    android:textColor="?attr/myTextColor"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/ivVerify"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:background="@drawable/verify_ic"
                    android:backgroundTint="@color/primary"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text=""
                    android:textColor="?attr/textgrey"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

                <!--            <TextView-->
                <!--                android:layout_marginLeft="@dimen/_10sdp"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:fontFamily="@font/poppins_regular"-->
                <!--                android:text="\u00B7 4h"-->
                <!--                android:textColor="?attr/textgrey"-->
                <!--                android:textSize="@dimen/_14sdp" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">


                    <ImageButton
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/delete_ic"
                        android:backgroundTint="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Delete"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>


            </LinearLayout>

            <!--        <com.google.android.material.divider.MaterialDivider-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"/>-->

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_10sdp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="Munnar Kerala"
                    android:textColor="?attr/textgrey"
                    android:textSize="@dimen/_10sdp" />


                <RelativeLayout
                    android:id="@+id/rlStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_km_bg"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/icLocation"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/location_ic"
                        android:backgroundTint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/icLocation"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/icLocation"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="233 km"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_8sdp" />


                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ivShare"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Trip to Kerala, looking for travel partner"
                    android:textColor="?attr/myTextColor"
                    android:textSize="@dimen/_12sdp" />


                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/share_ic"
                    android:backgroundTint="?attr/iconColor"
                    android:visibility="gone" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_2sdp">


                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/date_ic"
                    android:backgroundTint="?attr/iconColor" />


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:text=""
                    android:textColor="?attr/textgrey"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/more"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>


            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivShare"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="@dimen/_4sdp"
                android:text="Trip to Kerala, looking for travel partner"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


            <!--        <RelativeLayout-->
            <!--            android:id="@+id/rlStatus"-->
            <!--            android:layout_marginTop="@dimen/_8sdp"-->
            <!--            android:background="@color/red"-->
            <!--            android:padding="@dimen/_5sdp"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content">-->

            <!--            <TextView-->
            <!--                android:id="@+id/tvStatus"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Rejected"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="@dimen/_12sdp"-->
            <!--                android:fontFamily="@font/poppins_semibold"-->
            <!--                android:layout_centerInParent="true"-->
            <!--                />-->


            <!--        </RelativeLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text=""
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12sdp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/_4sdp"
                    app:iconSize="@dimen/_12sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/llDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingVertical="@dimen/_8sdp"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="@null"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/delete_ic"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/_4sdp"
                    app:iconSize="@dimen/_12sdp"
                    app:iconTint="@color/primary"
                    app:strokeColor="@color/borderColor"
                    app:strokeWidth="1dp" />


            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
